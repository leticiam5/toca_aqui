<h2 class='my-3'>Criar Conta</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                placeholder: 'Tom',
                label: "Nome" %>
    <%= f.input :last_name,
                required: true,
                placeholder: 'Jobim',
                label: "Sobrenome" %>
    <%= f.input :username,
                required: true,
                placeholder: 'tomjobim',
                label: "Usuário"%>
    <%= f.input :email,
                required: true,
                placeholder: 'tom.jobim@gmail.com',
                input_html: { autocomplete: "email" }%>
    <%= f.input :password, label: 'Senha',
                required: true,
                hint: ("Mínimo de #{@minimum_password_length} caracteres" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation, label: 'Confirme sua senha',
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Criar conta no Toca Aqui", class: 'btn btn-warning' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
